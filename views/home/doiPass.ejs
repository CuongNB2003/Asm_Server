<%- include('../inc/top.ejs') %>

    <div class="card border border-danger rounded-2 mt-4">
        <div class="text-center mt-4">
            <p style="color: red; font-style: italic; font-size: 28px;">
                <%= msg %>
            </p>
        </div>
        <form class="p-5" method="POST">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 form-floating mb-3">
                    <input type="password" class="form-control border border-danger rounded-2" id="floatingPassword"
                       name="passwordCu" placeholder="Password">
                    <label class="ms-3" for="floatingPassword">Nhập mật khẩu cũ</label>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class=" col-10 form-floating mb-3">
                    <input type="password" class="form-control border border-danger rounded-2" id="floatingPassword"
                       name="passwordMoi" placeholder="Password" required>
                    <label class="ms-3" for="floatingPassword" >Nhập mật khẩu mới</label>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 form-floating mb-3">
                    <input type="password" class="form-control border border-danger rounded-2" id="floatingPassword"
                       name="passwordRe" placeholder="Password" required>
                    <label class="ms-3" for="floatingPassword">Nhập lại mật khẩu mới</label>
                </div>
                <div class="col-1"></div>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-outline-danger"
                    style="width: 200px; height: 48px; font-size: 24px; font-weight: 500;">Save</button>
            </div>
        </form>

    </div>
    <%- include('../inc/bottom.ejs') %>