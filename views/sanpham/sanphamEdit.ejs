<%- include('../inc/top.ejs') %>

    <!-- Thêm sản phẩm -->
    <div class="card mt-4 border border-primary">
        <div class="card-body mt-3 p-5 ">
            <form>
                <select class="form-select mt-3 border border-primary rounded-2" aria-label="Default select example">
                    <option selected>Chọn thể loại</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <div class="form-floating mt-3">
                    <input type="text" class="form-control border border-primary rounded-2" id="floatingPassword"
                        placeholder="Nhập tên sản phẩm">
                    <label for="floatingPassword">Tên sản phẩm</label>
                </div>
                <div class="form-floating mt-3">
                    <input type="text" class="form-control border border-primary rounded-2" id="floatingPassword"
                        placeholder="Nhập ảnh sản phẩm">
                    <label for="floatingPassword">Ảnh sản phẩm</label>
                </div>
                <div class="form-floating mt-3">
                    <input type="number" class="form-control border border-primary rounded-2" id="floatingPassword"
                        placeholder="Nhập giá sản phẩm">
                    <label for="floatingPassword">Giá sản phẩm</label>
                </div>
                <div class="form-floating mt-3">
                    <textarea class="form-control border border-primary rounded-2" placeholder="Nhập mô tả sản phẩm"
                        id="floatingTextarea2" style="height: 100px"></textarea>
                    <label for="floatingTextarea2">Mô tả sản phẩm</label>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-outline-primary" style="width: 200px;">Save</button>
                </div>
            </form>
        </div>
    </div>

<%- include('../inc/bottom.ejs') %>