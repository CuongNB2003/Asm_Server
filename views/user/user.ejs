<%- include('../inc/top.ejs') %>

    <!-- Thanh Dieu khien -->
    <div style="text-align: center;" class="row mt-4">
        <nav class="navbar col-6">
            <div class="container-fluid">
                <form class="d-flex" role="search">
                    <input class="form-control me-2 border border-info" type="search" placeholder="Search" aria-label="Search"
                        style="width: 300px;">
                    <button class="btn btn-outline-info" type="submit" style="width: 150px;">Tìm kiếm</button>
                </form>
            </div>
        </nav>
        <div class="col-2">
            <a href="/user/block">
                <button type="button" class="btn btn-outline-info" style="width: 150px;">Danh sách chặn</button>
            </a>
        </div>
        <div class="col-2">
            <select class="form-select btn btn-outline-info" aria-label="Default select example" style="width: 150px;">
                <option selected>Sắp xếp</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="col-2">
            <select class="form-select btn btn-outline-info" aria-label="Default select example" style="width: 150px;">
                <option selected>Lọc</option>
                <option value="1">One</option>

            </select>
        </div>
    </div>
    <!-- bang danh sach -->
    <div class="mt-4">
        <table class="table table-bordered table-striped" style="margin-top: 15px;">
                <tr>
                    <th>STT</th>
                    <th>Avata</th>
                    <th>Họ và Tên</th>
                    <th>Tên đăng nhập</th>
                    <th>Email</th>
                    <th>Vai trò</th>
                    
                </tr>
                <% listUser.forEach( (row, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><img src="<%= row.avata %>" alt="" srcset="" width="60px" height="80px"></td>
                        <td><%= row.fullname %></td>
                        <td><%= row.username %></td>
                        <td><%= row.email %></td>
                        <% if((row.role) == true){ %>
                            <td><%= "admin"  %></td>
                        <% }else{ %>
                            <td><%= "user"  %></td>
                        <% } %>
                    </tr>
                <% }); %>
        </table>
    </div>
    <!-- danh muc -->
    <div class="btn-toolbar justify-content-end mt-3" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group" role="group" aria-label="First group">
            <button type="button" class="btn btn-outline-secondary">1</button>
            <button type="button" class="btn btn-outline-secondary">2</button>
            <button type="button" class="btn btn-outline-secondary">3</button>
            <button type="button" class="btn btn-outline-secondary">4</button>
            <button type="button" class="btn btn-outline-secondary">5</button>
            <button type="button" class="btn btn-outline-secondary">6</button>
        </div>
    </div>

    <%- include('../inc/bottom.ejs') %>