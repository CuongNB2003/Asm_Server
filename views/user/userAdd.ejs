<%- include('../inc/top.ejs') %>

    <!-- Thêm user -->
    <div class="text-center"><h3><%= msg %></h3></div>
    <div class="card mt-4 border border-info">
        <div class="card-body mt-3 p-5 ">
            <form method="post">
                <div class="form-floating mt-3">
                    <input name="username" type="text" class="form-control border border-info rounded-2" id="floatingPassword" placeholder="Nhập Username">
                    <label for="floatingPassword">Nhập Username</label>
                </div>
                <div class="form-floating mt-3">
                    <input name="password" type="password" class="form-control border border-info rounded-2" id="floatingPassword" placeholder="Nhập Password">
                    <label for="floatingPassword">Nhập Password</label>
                </div>
                <div class="form-floating mt-3">
                    <input name="fullname" type="text" class="form-control border border-info rounded-2" id="floatingPassword" placeholder="Nhập Fullname">
                    <label for="floatingPassword">Nhập Fullname</label>
                </div>
                <div class="form-floating mt-3">
                    <input name="email" type="email" class="form-control border border-info rounded-2" id="floatingPassword" placeholder="Nhập Email">
                    <label for="floatingPassword">Nhập Email</label>
                </div>
                <div class="form-floating mt-3">
                    <input name="avata" type="text" class="form-control border border-info rounded-2" id="floatingPassword" placeholder="Nhập Avata">
                    <label for="floatingPassword">Nhập Avata</label>
                </div>
                <div class="card border border-info mt-3">
                    <div class="row p-2">
                        <p class="col-2">Chọn chức vụ</p>
                        <div class="form-check col-1" >
                            <input class="form-check-input" type="radio" name="role" id="flexRadioDefault1" checked="checked">
                            <label class="form-check-label" for="flexRadioDefault1">User</label>
                          </div>
                          <div class="form-check col-1">
                            <input class="form-check-input" type="radio" name="role" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">Nhân Viên</label>
                          </div>
                    </div>
    
                </div>
                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-outline-info" style="width: 200px; height: 48px; font-size: 24px; font-weight: 500;">Save</button>
                </div>
            </form>
        </div>
    </div>

<%- include('../inc/bottom.ejs') %>